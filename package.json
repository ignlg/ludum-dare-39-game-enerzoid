{
  "name": "ludum-dare-39-game-enerzoid",
  "productName": "ludum-dare-39-game-enerzoid",
  "version": "1.0.0",
  "main": "electron-main.js",
  "license": "BSD-3-Clause",
  "scripts": {
    "webpack:dev": "webpack --config webpack.dev.config.js --progress --colors",
    "webpack:dist": "webpack --config webpack.dist.config.js --progress --colors",
    "build:dev": "echo-cli 'Building DEV ...' && yarn webpack:dev && echo-cli 'Build Complete ✔'",
    "build:dist": "echo-cli 'Building DIST ...' && yarn webpack:dist && echo-cli 'Build Complete ✔'",
    "server:dev": "webpack-dev-server --config webpack.dev.config.js --open",
    "server:dist": "webpack-dev-server --config webpack.dist.config.js --open",
    "setupGameSize": "node ./scripts/setupGameSize.js",
    "assets:dev": "node ./scripts/generateAssetsClass.js --dev",
    "assets": "node ./scripts/generateAssetsClass.js",
    "postinstall": "yarn setupGameSize",
    "electron:dev": "yarn build:dev && electron .",
    "electron:dist": "yarn build:dist && electron .",
    "electron:pack:dev": "yarn build:dev && node ./scripts/packageElectronApp.js",
    "electron:pack:dist": "yarn build:dist && node ./scripts/packageElectronApp.js",
    "checkDepsVersions": "npm-check --skip-unused -u",
    "lint": "tslint --type-check --fix --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": ["prettier --write --no-semi", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ignlg/ludum-dare-39-game-enerzoid.git"
  },
  "author": "Ignacio Lago <https://github.com/ignlg>",
  "devDependencies": {
    "@types/node": "^8.0.17",
    "@types/webfontloader": "^1.6.28",
    "clean-webpack-plugin": "0.1.16",
    "commander": "^2.11.0",
    "copy-webpack-plugin": "4.0.1",
    "echo-cli": "1.0.8",
    "electron": "^1.6.11",
    "electron-packager": "^8.7.2",
    "expose-loader": "0.7.3",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "npm-check": "^5.4.5",
    "phaser-ce": "^2.8.3",
    "pngjs-image": "0.11.7",
    "prettier": "^1.5.3",
    "prettier-webpack-plugin": "^0.2.1",
    "shelljs": "^0.7.8",
    "ts-loader": "^2.3.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^6.0.1",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.4.2",
    "webfontloader": "^1.6.28",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1",
    "webpack-shell-plugin": "0.5.0",
    "xml2js": "0.4.17"
  }
}
